<body id="game_indexpage">
  <div class="container">
    <div class="header">
        <h1>All Games</h1>
    </div>

    <fieldset>
      <legend>Today's Games</legend>
      <table style="width:100%">
        <tr>
          <th>Title</th>
          <th>Sport</th>
          <th>Planner</th>
          <th>Players needed</th>
        </tr>
          <% @today_games.each do |game| %>
          <tr>
            <td> <%= link_to game.title, game_path(game) %> </td>
            <td><%= game.sport_name %></td>
            <td><%= link_to game.planner_email, user_path(game.planner) %></td>
            <% case %>
              <% when game.players_needed == 0 %>
                <td style="color:red"><%= "Game is Full" %></td>
              <% when game.players_needed <= 3 %>
                <td style="color:yellow"><%= "#{game.players_needed} players needed." %></td>
              <% else%>
                  <td><%= "#{game.players_needed} players needed." %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </fieldset><br /><br />

    <fieldset>
      <legend>Future Games</legend>
      <table style="width:100%">
        <tr>
          <th>Title</th>
          <th>Sport</th>
          <th>Planner</th>
