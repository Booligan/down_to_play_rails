              <% else%>
                  <td><%= "#{game.players_needed} players needed." %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </fieldset><br /><br /><br /><br /><br /><br /><br /><hr><br />

    <fieldset>
      <legend>Old Games</legend>
      <table style="width:100%">
        <tr>
          <th>Title</th>
