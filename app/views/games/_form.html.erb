<%= form_for @game do |f|%>
  <%= f.collection_select :sport_id, Sport.all, :id, :name, include_blank: "Pick a sport"%>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label :max_players %>
    <%= f.number_field :max_players, min: 0, max: 50, value: 10 %>
  </p>
  <p>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </p>
  <p>
    <%= f.label :start_time %>
    <%= f.time_field :start_time %>
  </p>
    <%= f.submit %>
<% end %>
