<body id="show_game_page">
  <div class="container">
    <%= render 'layouts/show_buttons.html.erb' %>
    <br /><h1><%= @game.title %></h1>
    <small><%= "Planned by: #{@game.planner_email}" %></small>
    <small id="sport_name"><%= "Sport: #{@game.sport.name}" %></small><br />
    <div id="game_info">
      <br /><%= render 'layouts/errors_html.erb' %>
      <h2><%= "Location: #{@game.location}" %></h2>
      <h2><%= "Start Date: #{@game.start_date.strftime("%m/%d/%Y")}" %></h2>
      <h2><%= "Start Time: #{@game.start_time.strftime("%I:%M %p")}" %></h2>
      <% case %>
        <% when @game.players_needed <= 3 %>
          <h2 style="color:yellow"><%= "#{@game.players_needed} players needed" %></h2>
        <% when @game.players_needed == 'Game is full'%>
          <h2 style="color:red"><%= "#{@game.players_needed} players needed" %></h2>
        <% else%>
            <h2><%= "#{@game.players_needed} players needed" %></h2>
      <% end %>
      <h2><%= "Notes: #{@game.notes}" %></h2>
    </div>
    <div id="joined_players">
      <table style="width:33%">
        <tr>
          <th>Players Joined</th>
        </tr>
          <% @game.joined_players.each do |player| %>
          <tr>
            <td><%="#{player.email}"%></td>
          </tr>
        <% end %>
      </table>
    </div>


  </div>
</body>
