<body id="show_game_page">
  <div class="container">
    <%= render 'layouts/show_buttons.html.erb' %>
    <br /><h1 id="game-title" data-game-id='<%= @game.id %>'><%= @game.title %></h1>
    <small id="sport_name"><%= "Sport: #{@game.sport_name}" %></small><br />
    <div id="game_info">
      <br /><%= render 'layouts/errors_html.erb' %>
      <h2 id="game-location"><%= "Location: #{@game.location}" %></h2>
      <h2 id="game-start-date"><%= "Start Date: #{@game.start_date.strftime("%m/%d/%Y")}" %></h2>
      <h2 id="game-start-time"><%= "Start Time: #{@game.start_time.strftime("%I:%M %p")}" %></h2>
      <% case %>
        <% when @game.players_needed == 0 %>
          <h2 id="game-players-needed" style="color:red"><%= "Game is Full" %></h2>
        <% when @game.players_needed <= 3 %>
          <h2 id="game-players-needed" style="color:yellow"><%= "#{pluralize(@game.players_needed, "player")} needed" %></h2>
        <% else%>
            <h2 id="game-players-needed"><%= "#{pluralize(@game.players_needed, "player")} needed" %></h2>
      <% end %>
      <h2 id="game-notes"><%= "Notes: #{@game.notes}" %></h2>
    </div>

    <div id="joined_players">
      <table style="width:33%">
        <tr>
          <th style="background-color:goldenrod">Planner</th>
        </tr>
          <tr>
            <td id="planner" data-user-id='<%= @game.planner.id %>'><%= link_to @game.planner_email, user_path(@game.planner)%></td>
          </tr>
      </table>

      <table id='joined-players-table' style="width:33%">
        <tr>
          <th id="players-joined-th">Players Joined</th>
        </tr>
          <% @game.joined_players.each do |player| %>
          <tr class="game-joined-player" style="display:none">
            <td><%= link_to player.email, user_path(player)%></td>
          </tr>
        <% end %>
      </table>
    </div>


  </div>
</body>
