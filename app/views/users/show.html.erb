<body id="profilepage">
  <div class="container">
    <div class="header">
      <h1><%= @user.email %></h1>
    </div>
    <div class="game_links">
    <% if @user == current_user%>
      <div class="game_links_btn">
        <%= link_to "Planned Games", user_games_path(@user) %>
      </div>
      <div class="game_links_btn">
        <%= link_to "Joined Games", user_games_path(@user) %>
      </div>
      <div class="game_links_btn">
        <%= link_to "Plan A Game", new_user_game_path(@user) %>
      </div>
    <% end %>
  </div>
    <table>
      <tr>
        <th>Joined Games</th>
      </tr>
        <% @user.joined_games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game_path(game) %><small><%="- by #{game.planner_email}"%></small></td>
      </tr>
        <% end %>
    </table>
  </div>
</body>
