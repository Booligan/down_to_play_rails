<body id="sign_up_page">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder:"Email" %><br /><br />
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder:"Password" %><br /><br />
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation" %><br /><br />
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %><br /><br />
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>
